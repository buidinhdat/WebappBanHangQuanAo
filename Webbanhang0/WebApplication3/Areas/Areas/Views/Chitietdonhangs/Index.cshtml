@using PagedList.Mvc;
@model PagedList.IPagedList<WebApplication3.Areas.Areas.Models.chitietdonhang>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Areas/Views/Shared/_Adminlayout.cshtml";
}
<style>
    #myInput {
        width: 400px;
        margin-left: 400px;
    }

    table {
        padding: 0;
        border: none;
        border-collapse: collapse;
        border: 1px solid #ddd;
        width: 100%;
        margin: 50px auto;
    }

    tr:hover {
        color: red;
    }

    #suaxoa:hover {
        background-color: aqua;
    }

    button {
        padding: 10px 20px;
        border: 1px solid #eaeaea;
        background: #666;
        color: #fff;
        line-height: 1.5;
    }

        button:hover {
            background: #ff3366;
            border: 1px solid #ff3366;
        }

    .themmoi {
        color: white;
    }
</style>

<center><h2>Danh sách chi tiết đơn hàng</h2></center>
<div class="row">
    <div class="search-box">
        <input class="form-control" placeholder="Tìm kiếm" type="text" id="myInput" onkeyup="myFunction()">

    </div>
</div>
<br />
@using (Html.BeginForm("Create", "Chitietdonhangs", FormMethod.Get))
{

    
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>Thêm mới</button>

}
<table class="table table-striped table-bordered table-hover myTable" id="example">
    <thead>
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số lượng mua
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>

            <th>Sửa</th>
            <th>Chi tiết</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody id="myTable">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.donhang.tenkhachhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sanpham.tensanpham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluongmua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dongia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tongtien)
                </td>

                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.machitietdonhang })
                </td>
                <td>

                    @Html.ActionLink("Chi tiết", "Details", new { id = item.machitietdonhang })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.machitietdonhang })
                </td>
            </tr>

        }
    </tbody>

</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))