
@{
    ViewBag.Title = "getChitietdonhang";
    Layout = "~/Areas/Areas/Views/Shared/_Adminlayout.cshtml";
}
@using WebApplication3.Areas.Areas.Models

<div class="panel  panel-body">
    @using (Html.BeginForm("guiEmail/" + (int)ViewBag.madonhang, "DonHang", FormMethod.Post))
    {

        <div class="row">
            <div class="col-md-2">
                Địa chỉ email:
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" title="Email" id="email" name="email" value="@ViewBag.email" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                Nội dung:
            </div>
            <div class="col-md-5">
                <textarea class="form-control" title="Nội dụng email" id="noidungemail" name="noidungemail"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-send" title="Gửi mail"><span class="glyphicon glyphicon-send"></span>Gửi mail</button>
            </div>
        </div>

    }
</div>
@{
    try
    {
        if (Session["statusSendMail"].ToString() != null)
        {
        <div style="color:red" class="valid-feedback"><span class="glyphicon glyphicon-ok"></span>@Session["statusSendMail"].ToString()</div>
        }
        else
        {
        <div style="color:red" class="valid-feddback"> <span class="glyphicon glyphicon-envelope" ></span>Chưa gửi mail</div>

        }
    }
    catch
    {
        <div></div>
    }
}
    


    <h2>Họ tên : @ViewBag.hoten </h2>
<div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr style="text-align:center">

                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Số lượng mua
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Thành tiền
                </th>
            </tr>
        </thead>
        <tbody>
            @{ List<chitietdonhang> lictdh = (List<chitietdonhang>)ViewBag.chitietdonhang;
                foreach (chitietdonhang item in lictdh)
                {
                    <tr>
                        <td>@item.tensanpham</td>
                        <td>@item.soluongmua</td>
                        <td>@item.dongia</td>
                        <td>@item.tongtien</td>
                    </tr>
                }
            }
        </tbody>

    </table></div>

    <h3>Tổng tiền : @ViewBag.tongtien </h3>

<div>
    @using (Html.BeginForm("DownloadHoadon/"+ (int)ViewBag.madonhang, "Donhang", FormMethod.Post))
    {
        <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-file"></span>Xuất hóa đơn</button>
    }
</div>
