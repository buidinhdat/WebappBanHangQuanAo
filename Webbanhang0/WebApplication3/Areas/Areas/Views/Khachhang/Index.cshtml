@using PagedList.Mvc;
@model PagedList.IPagedList<WebApplication3.Areas.Areas.Models.khachhang>
@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Areas/Areas/Views/Shared/_Adminlayout.cshtml";
}
<style>
    table {
        padding: 0;
        border: none;
        border-collapse: collapse;
        border: 1px solid #ddd;
        width: 100%;
        margin: 50px auto;
    }

    tr:hover {
        color: red;
    }

    #suaxoa:hover {
        background-color: aqua;
    }

    button {
        padding: 10px 20px;
        border: 1px solid #eaeaea;
        background: #666;
        color: #fff;
        line-height: 1.5;
    }

        button:hover {
            background: #ff3366;
            border: 1px solid #ff3366;
        }

    .themmoi {
        color: white;
    }

    #myInput {
        width: 400px;
        margin-left: 400px;
    }
</style>
<span><i class="glyphicon glyphicon-download"></i>@Html.ActionLink("Tải xuống file Excel", "Download", "Khachhang")</span>

<center><h2>Danh sách khách hàng</h2></center>
<div class="row">
    <div class="search-box">
        <input class="form-control" placeholder="Tìm kiếm" type="text" id="myInput" onkeyup="myFunction()">

    </div>
</div>
<br />

@using (Html.BeginForm("Create", "Khachhang", FormMethod.Get))
{
    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>Thêm mới</button>


}
<table class="table table-striped table-bordered table-hover myTable" id="example">
    <thead>
        <tr>
            <th>
                Tên đăng nhập
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>
            <th>
                Quyền
            </th>
            <th>Sửa</th>
            <th>Chi tiết</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tendangnhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.matkhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hoten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sodienthoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.diachi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quyen)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.makhachhang })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.makhachhang })
                </td>
                <td>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.makhachhang })
                </td>
            </tr>
        }
    </tbody>


</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
