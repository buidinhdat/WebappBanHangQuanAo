@using PagedList.Mvc;
@model PagedList.IPagedList<WebApplication3.Areas.Areas.Models.sanpham>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/Areas/Views/Shared/_Adminlayout.cshtml";
}
<style>
    table {
        padding: 0;
        border: none;
        border-collapse: collapse;
        border: 1px solid #ddd;
        width: 100%;
        margin: 50px auto;
    }

    tr:hover {
        color: red;
    }

    #suaxoa:hover {
        background-color: aqua;
    }

    button {
        padding: 10px 20px;
        border: 1px solid #eaeaea;
        background: #666;
        color: #fff;
        line-height: 1.5;
    }

        button:hover {
            background: #ff3366;
            border: 1px solid #ff3366;
        }

    #myInput {
        width: 400px;
        margin-left: 400px;
    }
</style>

<center><h2>Danh sách sản phẩm</h2></center>
<div class="row">
    <div class="search-box">
        <input class="form-control" placeholder="Tìm kiếm" type="text" id="myInput" onkeyup="myFunction()">

    </div>
</div>
<br />

@using (Html.BeginForm("Create", "Sanpham", FormMethod.Get))
{

    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>Thêm mới</button>


}
<table class="table table-striped table-bordered table-hover myTable" id="example">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên nhà sản xuất
            </th>
            <th>
                Tên nhóm hàng
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Chi tiết
            </th>
            <th>
                Sửa
            </th>
            <th>Chi tiết</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody id="myTable">

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.masanpham)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.nhasanxuat.tennhasanxuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nhomhang.tennhomhang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tensanpham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dongia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td style="width:300px">
                    <center>
                        <img style="width:200px;height:200px;" class="img-thumbnail" src="~/Content/anh/@Html.DisplayFor(modelItem => item.anhsanpham)" title="@Html.DisplayFor(modelItem => item.anhsanpham)" />
                    </center>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.chitiet)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.masanpham })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.masanpham })
                </td>
                <td>

                    @Html.ActionLink("Xóa", "Delete", new { id = item.masanpham })
                </td>
            </tr>
        }
    </tbody>

</table>

<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
